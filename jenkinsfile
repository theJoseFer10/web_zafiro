pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Install') {
            steps {
                sh 'npm install'
            }
        }

        stage('Build') {
            steps {
                sh 'npm run build'
            }
        }

        stage('Tests') {
            steps {
                sh 'npm test || true'
            }
        }

        stage('Push to GitHub (trigger Netlify)') {
            steps {
                sh '''
                git config user.email "jenkins@example.com"
                git config user.name "Jenkins"
                git add .
                git commit -m "build from jenkins" || true
                git push origin main
                '''
            }
        }
    }
}
